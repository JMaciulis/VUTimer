<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="320dp"
        android:layout_height="32dp"
        android:text="Name"
        android:id="@+id/course_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="16dp"
        android:paddingTop="6dp"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/c_p_divider1"
        android:layout_alignRight="@+id/course_name"
        android:layout_alignEnd="@+id/course_name"
        android:layout_below="@+id/course_name"
        android:layout_alignLeft="@+id/course_description"
        android:layout_alignStart="@+id/course_description" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="Description"
        android:id="@+id/course_description"
        android:textSize="16dp"
        android:layout_below="@+id/c_p_divider1"
        android:layout_alignLeft="@+id/course_name"
        android:layout_alignStart="@+id/course_name"
        android:paddingTop="6dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/c_p_divider2"
        android:layout_alignRight="@+id/course_description"
        android:layout_alignEnd="@+id/course_description"
        android:layout_below="@+id/course_description"
        android:layout_alignLeft="@+id/course_description"
        android:layout_alignStart="@+id/course_description" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_people"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/course_description" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src ="@drawable/ic_people"
        android:layout_below="@+id/c_p_divider1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/c_p_divider2"
        android:layout_toLeftOf="@+id/c_p_divider1"
        android:layout_toStartOf="@+id/c_p_divider1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task count"
        android:textSize="16dp"
        android:id="@+id/task_count"
        android:layout_below="@+id/c_p_divider2"
        android:layout_alignLeft="@+id/c_p_divider2"
        android:layout_alignStart="@+id/c_p_divider2" />
</RelativeLayout>