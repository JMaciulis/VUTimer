<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="320dp"
        android:layout_height="42dp"
        android:text="Name"
        android:id="@+id/course_name"
        android:textSize="24dp"
        android:paddingTop="6dp"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/c_p_divider1"
        android:layout_alignRight="@+id/course_name"
        android:layout_alignEnd="@+id/course_name"
        android:layout_below="@+id/course_name"
        android:layout_alignLeft="@+id/course_description"
        android:layout_alignStart="@+id/course_description" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="Description"
        android:id="@+id/course_description"
        android:textSize="24dp"
        android:paddingTop="6dp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/c_p_divider1"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/c_p_divider2"
        android:layout_alignRight="@+id/course_description"
        android:layout_alignEnd="@+id/course_description"
        android:layout_below="@+id/course_description"
        android:layout_alignLeft="@+id/course_description"
        android:layout_alignStart="@+id/course_description" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_folder1"
        android:layout_alignBottom="@+id/c_p_divider1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src ="@drawable/ic_description1"
        android:layout_alignTop="@+id/course_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Description:"
        android:id="@+id/textView9"
        android:layout_marginTop = "6dp"
        android:layout_above="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name:"
        android:id="@+id/textView10"
        android:layout_above="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

</RelativeLayout>